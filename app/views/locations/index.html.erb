<div class="event-index-container event-index-layout" id="home-content">
    <div class="upcoming">
      <div class="event-cards-home-container">
        <div class="container">
            <h2>Locations</h2>
          <div class="row">
            <% @locations.each do |location| %>
              <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 event-card-padding">
                  <div class="home-event-cards" style="background-image: url(<%= cl_image_path 'cuttlefish', crop: :fill; %>)">
                    <div class="display-flex-space-between">
                    </div>
                  </div>
                  <div class="event-card-content ">
                    <p class='lightslategrey'><i class="fas fa-map-marker-alt lightslategrey" style='padding-right:10px;'></i><%= location.area%></p>
                  </div>
              </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
